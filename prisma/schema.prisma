generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id                    String       @id @unique
  sport                 SportType
  homeTeamId            String
  awayTeamId            String
  homeTeamName          String
  awayTeamName          String
  gameDate              DateTime     @map("game_date")
  startTime             String?
  status                GameStatus   @default(SCHEDULED)
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
  oddsJson              Json?        @map("odds_json")
  probableHomePitcherId Int?         @map("probable_home_pitcher_id")
  probableAwayPitcherId Int?         @map("probable_away_pitcher_id")
  awayScore             Int?         @map("away_score")
  homeScore             Int?         @map("home_score")
  predictions           Prediction[]

  @@map("games")
}

model Prediction {
  id              String            @id @default(uuid())
  gameId          String
  predictionType  PredictionType
  predictionValue String
  confidence      Float
  reasoning       String
  outcome         PredictionOutcome @default(PENDING)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  projectionJson  Json?
  game            Game              @relation(fields: [gameId], references: [id])

  @@map("predictions")
}

model TeamStats {
  id            String    @id @default(uuid())
  teamId        String    @unique
  teamName      String
  sport         SportType
  wins          Int       @default(0)
  losses        Int       @default(0)
  runsScored    Int?      @map("runs_scored")
  runsAllowed   Int?      @map("runs_allowed")
  pointsScored  Int?      @map("points_scored")
  pointsAllowed Int?      @map("points_allowed")
  lastUpdated   DateTime  @updatedAt
  createdAt     DateTime  @default(now())
  statsJson     Json?     @map("stats_json")

  @@map("team_stats")
}

enum SportType {
  NBA
  MLB
}

enum PredictionType {
  SPREAD
  MONEYLINE
  TOTAL
}

enum PredictionOutcome {
  WIN
  LOSS
  PUSH
  PENDING
}

enum GameStatus {
  SCHEDULED
  IN_PROGRESS
  FINAL
  POSTPONED
  CANCELLED
}
