{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "dist",
    "noEmit": false,
    "jsx": "react",
    "plugins": [],
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/scripts/**/*",
    "src/lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 