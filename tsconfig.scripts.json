{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist/scripts",
    "rootDir": ".",
    "noEmit": false
  },
  "include": [
    "src/scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 